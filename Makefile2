# Compiler and flags
CXX := g++
CXXFLAGS := -std=c++11 -Wall

# Directories
SRC_DIR := src
INC_DIR := inc
OBJ_DIR := obj

# Source and object files
SRCS := $(wildcard $(SRC_DIR)/*.cpp)
OBJS := $(patsubst $(SRC_DIR)/%.cpp,$(OBJ_DIR)/%.o,$(SRCS))

# Target executable
TARGET := test

ifeq ($(UC),1)
    # Compile the main.cpp file instead of unit_tests.cpp
    SRCS := $(filter-out $(SRC_DIR)/unit_tests.cpp, $(SRCS))
    INC_DIR := $(filter-out inc/acutest.h, $(INC_DIR))
else
    # Include unit_tests.cpp
    SRCS := $(filter-out $(SRC_DIR)/main.cpp, $(SRCS))
endif

# Compile and link
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -I$(INC_DIR) $^ -o $@

# Compile source files to object files
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	@mkdir -p $(OBJ_DIR)
	$(CXX) $(CXXFLAGS) -I$(INC_DIR) -I$(dir $<) -c $< -o $@

test:
	
# Clean rule
clean:
	rm -rf $(OBJ_DIR) $(TARGET)

.PHONY: clean


